// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trademark {
  id           Int           @id @default(autoincrement())
  denomination String
  class        Int
  type         TrademarkType?
  certificate  String
  expiration   DateTime
  products     String?
  ownerId      Int
  owner        Owner         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Owner {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  country    Country
  trademarks Trademark[]
  contacts   Contact[]   @relation("OwnerContacts")
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Contact {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String   @unique
  agentId   Int
  agent     Agent    @relation(fields: [agentId], references: [id])
  owners    Owner[]  @relation("OwnerContacts")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Agent {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  country   Country
  area      String?
  contacts  Contact[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model EmailTemplate {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TrademarkType {
  WORD
  FIGURATIVE
  MIXED
}

enum Country {
  ARGENTINA
  BRAZIL
  CANADA
  CHINA
  FRANCE
  GERMANY
  INDIA
  ITALY
  JAPAN
  MEXICO
  SPAIN
  UNITED_KINGDOM
  UNITED_STATES
  PERU
}
